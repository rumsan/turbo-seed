{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "prisma:generate": {
      "cache": false,
      "persistent": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma/client"]
    },
    "dev": {
      "dependsOn": ["^api#prisma:generate"],
      "inputs": [".env*"],
      "cache": false,
      "persistent": true
    }
  }
}
